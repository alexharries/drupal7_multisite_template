  # Four's Drupal 7 redirects.

  # Domain redirects - please ADD, don't REPLACE, here :)
  RewriteCond %{HTTP_HOST} ^www.epsilon-churchwalk.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^epsilon-churchwalk.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.epsilon-churchwalk.com$ [OR]
  RewriteCond %{HTTP_HOST} ^epsilon-churchwalk.com$
  RewriteRule (.*)$ http%{ENV:protossl}://www.epsilon-churchwalk.london/$1 [R=301,L]

  RewriteCond %{HTTP_HOST} ^nhsnwlondon.dev.fourstudio.co.uk$
  RewriteRule (.*)$ http%{ENV:protossl}://development.nhsnwlondon.dev.fourstudio.co.uk/$1 [R=301,L]

  RewriteCond %{HTTP_HOST} ^www.6portalway.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^6portalway.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.6portalway.com$ [OR]
  RewriteCond %{HTTP_HOST} ^6portalway.com$ [OR]
  RewriteCond %{HTTP_HOST} ^6portalway.london$
  RewriteRule (.*)$ http%{ENV:protossl}://www.6portalway.london/$1 [R=301,L]

  RewriteCond %{HTTP_HOST} ^londonsquarecaledonianroad.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.londonsquarecaledonianroad.com$ [OR]
  RewriteCond %{HTTP_HOST} ^londonsquarecaledonianroad.com$
  RewriteRule (.*)$ http%{ENV:protossl}://www.londonsquarecaledonianroad.co.uk/$1 [R=301,L]

  # Redirect the Welsh versions of WMC to the correct domain name.
  RewriteCond %{HTTP_HOST} ^yganolfan10.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.yganolfan10.org.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.yganolfan10.co.uk$
  RewriteRule (.*)$ http%{ENV:protossl}://yganolfan10.org.uk/$1 [R=301,L]

  # Redirect the English versions of WMC to the correct domain name.
  RewriteCond %{HTTP_HOST} ^wmc10.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.wmc10.org.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^www.wmc10.co.uk$
  RewriteRule (.*)$ http%{ENV:protossl}://wmc10.org.uk/$1 [R=301,L]

  # Redirect Bijou to the non-dubdubdub version.
  RewriteCond %{HTTP_HOST} ^www.bijouweddingvenues.co.uk$
  RewriteRule (.*)$ http%{ENV:protossl}://bijouweddingvenues.co.uk/$1 [R=301,L]

  # Redirect Bijoufest to bijoufest.com.
  RewriteCond %{HTTP_HOST} ^www.bijoufest.com$ [OR]
  RewriteCond %{HTTP_HOST} ^www.bijoufest.co.uk$ [OR]
  RewriteCond %{HTTP_HOST} ^bijoufest.co.uk$
  RewriteRule (.*)$ http%{ENV:protossl}://bijoufest.com/$1 [R=301,L]

  # Redirect all visitors to http://themanbookerprize.com; currently, there are a
  # LOT of people accessing the site through random subdomains and it's filling the
  # disk cache with useless cached data.
  RewriteCond %{HTTP_HOST} ^[^.]+\.(themanbookerprize\.com)$ [NC]
  RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L,NE]

  # Redirect Bijou Fest to https.
  RewriteCond %{HTTP_HOST} ^(bijouyoga\.4com\.local|bijouyoga\.6\.dev\.fourplc\.com) [NC]
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # Redirect fourcommunications.com to dubdubdub.
  RewriteCond %{HTTP_HOST} ^fourcommunications.com$
  RewriteRule (.*)$ http%{ENV:protossl}://www.fourcommunications.com/$1 [R=301,L]
